<h1>Des chiffres et des Lettres !</h1>
<div class="mb-3 letter">
  <% @letter.each do |let|  %>
    <div id="letters"><%= let.capitalize %></div>
  <% end %>
</div>
<div class="form">
  <form action="/score" method="POST" data-turbo="false">
    <div class="mb-3">
      <label for="InputText" class="">Quelle est le mot le plus long que tu puisse trouver ?</label>
      <input type="text" class="form-control" id="text" aria-describedby="text" name="response" value="">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <%= hidden_field_tag :user_reponse, @letter %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
